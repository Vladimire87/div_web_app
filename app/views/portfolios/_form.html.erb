<div class="container-xxl mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 fs-3"><i class="bi bi-plus-circle"></i> Create New Portfolio</h1>
    <%= link_to portfolios_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back to Portfolios
    <% end%>
  </div>
  <div class="container card col-sm-12 col-lg-6">
    <div class="card-body">
      <%= form_with(model: portfolio) do |form| %>
        <% if portfolio.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(portfolio.errors.count, "error") %> prohibited this portfolio from being saved:</h2>
            <ul>
              <% portfolio.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="mb-3">
          <%= form.label "Portfolio Name", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>
        <%= form.label :ticker, class: "form-label" %>
        <%= form.fields_for :holdings do |holding_form| %>
          <div class="mb-3 row">
            <div class="col-8">
              <%= holding_form.text_field :ticker, class: "form-control" %>
            </div>
            <div class="col-4">
              <%= holding_form.number_field :shares, step: :any, class: "form-control" %>
            </div>
          </div>
        <% end %>
        <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create Portfolio</button>
      <% end %>
    </div>
  </div>
</div>
