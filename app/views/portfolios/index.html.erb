<div class="container-xxl mt-5">
  <%= render "portfolios/notice" %>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h2"><i class="bi bi-briefcase"></i> Your Portfolios</h1>
      <span class="stats-row">You have <%= @portfolios.count %> Portfolios in total</span>
    </div>
    <%= link_to new_portfolio_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle"></i> Create New Portfolio
    <% end %>
  </div>
  <div class="row">
    <%= render "portfolios/card" %>
  </div>
</div>