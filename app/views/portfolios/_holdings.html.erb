<div class="card" >
  <div class="card-body" >
    <h5 class="card-title mb-4" ><i class="bi bi-list-ul" ></i> Portfolio Holdings</h5>
    <div class="stock-list" >
      <% @portfolio.holdings.each do |holding| %>
        <div class="stock-item" >
          <div class="d-flex justify-content-between align-items-center mb-2" >
            <div >
              <span class="stock-name" >Microsoft Corporation</span>
              <span class="stock-ticker ms-2" ><%= holding.ticker%></span>
            </div>
            <span class="badge bg-success" >+2.3%</span>
          </div>
          <div class="row stock-stats" >
            <div class="col-md-3 col-6" >
              <span class="text-muted" >Shares:</span> <%= holding.shares%>
            </div>
            <div class="col-md-3 col-6" >
              <span class="text-muted" >Avg. Cost:</span> $245.32
            </div>
            <div class="col-md-3 col-6" >
              <span class="text-muted" >Current Price:</span> $280.15
            </div>
            <div class="col-md-3 col-6" >
              <span class="text-muted" >Total Value:</span> $7,003.75
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>