<div class="container-xxl mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 fs-3"><i class="bi bi-plus-circle"></i> Create New Portfolio</h1>
    <%= link_to @portfolio, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back to Portfolio
    <% end%>
  </div>
</div>
<%= render "form", portfolio: @portfolio %>
<div class="mt-5 text-center">
  <%= button_to "Delete", portfolio_path(@portfolio), class: "btn btn-secondary btn-sm", method: :delete, data: { turbo_confirm: 'Are you sure? Portfolio will be lost'} %>
</div>